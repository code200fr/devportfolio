{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2022",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "sourceMap": false,
    "outDir": "build",
    "baseUrl": ".",
    "watch": false,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    ".*/"
  ]
}